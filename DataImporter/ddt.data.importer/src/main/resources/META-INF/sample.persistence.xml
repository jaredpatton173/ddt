<persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
	<provider>
		org.eclipse.persistence.jpa.PersistenceProvider
	</provider>
	<class>ddt.data.importer.entity.Ads</class>
	<class>ddt.data.importer.entity.Leads</class>
	<class>ddt.data.importer.entity.Orders</class>
	<properties>
		<property name="eclipselink.logging.level" value="FINE" />
		<property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
		<property name="eclipselink.jdbc.url" value="jdbc:mysql://{ip}:{port}/{database};create=true" />
		<property name="eclipselink.jdbc.password" value="{password}" />
		<property name="eclipselink.jdbc.user" value="{username}" />
	</properties>
</persistence-unit>